<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body class="bg-gray-100">
    <%- include('./partials/header') %> <% if(success.length>0){ %>
    <div
      class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500"
    >
      <span class="inline-block mt-1 mb-1 text-white"> <%= success %> </span>
    </div>
    <% } %>
    <div class="w-full flex items-start px-10 py-10">
      <!-- Sidebar -->
      <div class="w-1/4 flex flex-col items-start">
        <div class="flex items-center gap-2 mb-5">
          <h3 class="text-lg font-semibold">Sort by</h3>
          <form action="/shop">
            <select
              class="border border-gray-300 rounded-md px-2 py-1 text-gray-600 focus:outline-none"
              name="sortby"
              id=""
            >
              <option value="popular">Popular</option>
              <option value="newest">Newest</option>
            </select>
          </form>
        </div>
        <div class="flex flex-col">
          <a
            class="text-gray-700 hover:text-blue-500 block mb-2 font-medium"
            href=""
            >New Collection</a
          >
          <a
            class="text-gray-700 hover:text-blue-500 block mb-2 font-medium"
            href=""
            >All Products</a
          >
          <a
            class="text-gray-700 hover:text-blue-500 block mb-2 font-medium"
            href=""
            >Discounted Products</a
          >
        </div>
        <div class="mt-10">
          <h4 class="text-lg font-semibold">Filter by:</h4>
          <a
            class="text-gray-700 hover:text-blue-500 block mb-2 font-medium"
            href=""
            >Availability</a
          >
          <a
            class="text-gray-700 hover:text-blue-500 block mb-2 font-medium"
            href=""
            >Discount</a
          >
        </div>
      </div>

      <!-- Products Section -->
      <div class="w-3/4 flex flex-wrap gap-5">
        <% product.forEach(function(product){ %>
        <div class="bg-white shadow-md rounded-lg overflow-hidden w-60">
          <div
            class="w-full h-52 flex items-center justify-center bg-[<%= product.bgcolor %>]"
          >
            <img
              class="h-48 object-contain"
              src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
              alt="<%= product.name %>"
            />
          </div>
          <div
            class="flex justify-between bg-[<%= product.panelcolor %>] items-center px-4 py-3 text-[<%= product.textcolor %>]"
          >
            <div>
              <h3 class="text-lg font-bold"><%= product.name %></h3>
              <h4 class="text-sm">â‚¹ <%= product.price %></h4>
            </div>
            <a
              class="w-8 h-8 flex items-center justify-center rounded-full bg-white shadow-md text-gray-700 hover:bg-gray-200"
              href="/addtocart/<%= product._id %>"
            >
              <i class="ri-add-line"></i>
            </a>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <%- include('./partials/footer') %>
  </body>
</html>
